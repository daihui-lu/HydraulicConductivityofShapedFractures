FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-8;
        relTol          1e-3;
    }

    "U"
    {
        solver          GAMG;
        smoother        DILU;
        tolerance       1e-8;
        relTol          0;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "UFinal"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor   on;
    nOuterCorrectors    1000000;
    nCorrectors         5;
    nNonOrthogonalCorrectors 0;
    pRefCell            0;
    pRefValue           0;
    turbOnFinalIterOnly no;

    outerCorrectorResidualControl
    {
        "p|U"
        {
            tolerance 1e-06;
            relTol        0;
        }
    }

}

relaxationFactors
{
    equations
    {
        ".*"   1;
    }
}

