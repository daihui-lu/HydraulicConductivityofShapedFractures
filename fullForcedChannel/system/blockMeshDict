// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;
alpha   -0.0005;
Lx 100;
Lz  #calc "1.0 + $Lx*$alpha";
Lz0 #calc "-1.0 - $Lx*$alpha";

vertices
(
    (0  0 -1)
    ($Lx  0 $Lz0)
    ($Lx 0.1 $Lz0)
    (0 0.1 -1)

    (0  0  1)
    ($Lx  0  $Lz)
    ($Lx 0.1  $Lz)
    (0 0.1  1)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (100 1 100) 
        (
                          
          1/*  (
                (0.05 0.1 4)    
