FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance       1e-6;
        relTol          1e-4;
    }

    "(U|sigma)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|sigma)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor   on;
    nOuterCorrectors    200;
    nCorrectors         2;
    nNonOrthogonalCorrectors 2;
    pRefCell            0;
    pRefValue           0;
    turbOnFinalIterOnly yes;
    outerCorrectorResidualControl
    {
        "p"
            {
                    tolerance  1e-05;
                    relTol     0;
            }
    }

}

relaxationFactors
{
    equations
    {
        p   0.1;
        U   0.1;
    }
}

