FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        smoother         DIC;
        tolerance       1e-8;
        relTol          0;
        maxIter         10;
    }

    "U"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "UFinal"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor   on;
    nOuterCorrectors    100000;
    nCorrectors         3;
    nNonOrthogonalCorrectors 0;
    pRefCell            0;
    pRefValue           0;
    turbOnFinalIterOnly no;

    outerCorrectorResidualControl
    {
        "p|U"
        {
            tolerance 1e-06;
            relTol        0;
        }
    }

}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent yes;
    
    residualControl
    {
        p               1e-5;
        U               1e-5;
    }

}


relaxationFactors
{
    fields
    {
        p               1;
        U               1;
    }
    equations
    {
        U               0.9;
    }
}


